
public class LeaningJava 
{
	
	// line below states this is the main. Static is needed for running this class
	public static void main(String args[])
	{
		// Switch example, used when there are many checks
		int age; 
		int counter = 0;
		age = 3;
			
		switch (age)
		{
		case 1:
			System.out.println("You Can crawl");
		break;
		
		case 2:
			System.out.println("you can talk");
		break;
		
		case 3:
			System.out.println("you can walk");
		break;
		//default is in place in case none of the case's above are true
		default:
			System.out.println("I don't know how old you are");
		break;
		// end of case example
		}
		
		
		
		
		// while loop example - counter declared at top
		
		while (counter < 10)
		{
			System.out.println(counter);
			counter ++;
		}
		
		//to link the class called tuna, this is how you call another class
		{
			//object means to use something from tuna class
			tuna tunaObject = new tuna();
			tunaObject.simpleMessage(); //simpleMessage is the Method name in the tuna class		
					
		}
		
		
		
		//how to use methods with paramaeters
		{
			//line below imports the scanner
			import java.util.Scanner;
			//line below, in between brackets is the argument - 
			public void simpleMessage (String name)
			{
				Scanner input = new Scanner(System.identityHashCode(x);
				tuna tunaObject = new tuna ();
				System.out.println("Enter your name here: ");
				//line below takes the user input and stores it as a variable in name
				String name = input.nextLine
			} 
		}
		
		
		
		
		
		
		
	}
}
